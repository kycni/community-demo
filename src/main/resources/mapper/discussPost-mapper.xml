<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.song.community.dao.mapper.DiscussPostMapper">
    <sql id="selectFields">
        id, user_id, title, content, type, status, create_time, comment_count, score
    </sql>
    <sql id="insertFields">
        user_id, title, content, type, status, create_time, comment_count, score
    </sql>
    
    <select id="selectDiscussPostList" resultType="DiscussPost">
        select <include refid="selectFields"/>
        from discuss_post
        where status != 2
        <if test="userId!=0">
            and user_id = #{userId}
        </if>
        order by type desc, create_time desc 
        limit #{offset}, #{limit}
    </select>

    <select id="selectDiscussPostCount" resultType="int">
        select count(id) 
        from discuss_post
        where status != 2
        <if test="userId!=0">
            and user_id = #{userId}
        </if>
    </select>
    
    <select id="selectDiscussPost" resultType="DiscussPost">
        select <include refid="selectFields"/>
        from discuss_post
        where id = #{id};
    </select>
    
    <insert id="insertDiscussPost" parameterType="DiscussPost" keyProperty="id">
        insert into discuss_post (<include refid="insertFields"/>) 
        VALUES (#{userId},#{title},#{content},#{type},#{status},#{createDate},#{commentCount},#{score})
    </insert>
    
</mapper>